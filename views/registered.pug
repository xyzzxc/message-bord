extends myLayout

block resName
  link(href='../stylesheets/super-awsome.css' rel='stylesheet')
  
  script(type='').
    function MyClick() {
    var psd1 = document.getElementById("password");
    var psd2 = document.getElementById("password2");
    if(psd1.value!=psd2.value || psd1.value==''){psd2.setCustomValidity('密碼確認不正確');}
    else{psd2.setCustomValidity('');}
    }

block content
  #D1
    h1
      span(style='font-family:DFKai-sb;') 註冊介面
    form(method='post' enctype='multipart/form-data')
      p
        // 段落
        .form-group
          label(for='Name')
            h4
              span(style='font-family:DFKai-sb;') 姓名
          .row
            .col-lg-4.col-md-3.col-sm-1
            .col-lg-4.col-md-6.col-sm-10
              input#Name.form-control(type='text' name='Name' required)
            .col-lg-4.col-md-3.col-sm-1
          label(for='userName')
            h4
              span(style='font-family:DFKai-sb;') &#x5E33;&#x865F;
          .row
            .col-lg-4.col-md-3.col-sm-1
            .col-lg-4.col-md-6.col-sm-10
              input#userName.form-control(type='email' placeholder='name@example.com' name='userName' required)
            .col-lg-4.col-md-3.col-sm-1
          label(for='password')
            h4
              span(style='font-family:DFKai-sb;') &#x5BC6;&#x78BC;
          br
          .row
            .col-lg-4.col-md-3.col-sm-1
            .col-lg-4.col-md-6.col-sm-10
              input#password.form-control(type='password' rows='3' name='password')
            .col-lg-4.col-md-3.col-sm-1
          label(for='password2')
            h4
              span(style='font-family:DFKai-sb;') 確認密碼
          br
          .row
            .col-lg-4.col-md-3.col-sm-1
            .col-lg-4.col-md-6.col-sm-10
              input#password2.form-control(type='password' rows='3' name='password2')
            .col-lg-4.col-md-3.col-sm-1
          label(for='file')
            h4
              span(style='font-family:DFKai-sb;') 頭貼
          br
          .row
            .col-lg-4.col-md-3.col-sm-1
            .col-lg-4.col-md-6.col-sm-10
              input#file.form-control(type='file' rows='3' name='file' required)
            .col-lg-4.col-md-3.col-sm-1
          h4
            span(style='font-family:DFKai-sb;') 性別
          .cc-selector
            input#man(type='radio' name='sex' value='man' checked)
            label.drinkcard-cc.man(for='man')
            input#woman(type='radio' name='sex' value='woman')
            label.drinkcard-cc.woman(for='woman')
            input#unknow(type='radio' name='sex' value='unknow')
            label.drinkcard-cc.unknow(for='unknow')
          input.btn.btn-info(type='submit' value='註冊' onclick='MyClick()')
          br
          br
          // Button to Open the Modal
          button.btn.btn-outline-secondary(type='button' data-toggle='modal' data-target='#myModal')
            | &#x7D44;&#x54E1;&#x540D;&#x55AE;
