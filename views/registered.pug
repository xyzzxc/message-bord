          #myModal.modal
            .modal-dialog
              .modal-content
                // Modal Header
                .modal-header
                  h4.modal-title &#x7D44;&#x54E1;&#x540D;&#x55AE;
                  button.close(type='button' data-dismiss='modal') &times;
                // Modal body
                .modal-body
                  option
